{% extends "base" %}

{% block content %}
{% set tags = split_tags(tags=upload.tag_string) %}
<main class="two-column-page">
  <div class="sidebar upload-metadata">
  </div>

  <div class="content">
    <a href="/u/{{ upload.file_id }}">Back to upload</a>
    <form action="/upload/{{ upload.file_id }}" method="POST">
      <fieldset>
        <label for="tags">Tags (space-separated)</label>
        <input type="text" id="tags" name="tags" value="{{ upload.tag_string }}" required>
      </fieldset>
      <fieldset>
        <label for="source">Source (URL)</label>
        <input type="text" id="source" name="source" value="{{ upload.source }}">
      </fieldset>
      <fieldset>
        <label for="original_upload_date">Original Upload Date <small>(if uncertain, use first day of month / year approximately)</small></label>
        <input type="date" id="original_upload_date" name="original_upload_date" value="{{ upload.original_upload_date }}">
      </fieldset>
      <fieldset>
        <label for="description">Description</label>
        <textarea id="description" name="description">{{ upload.description }}</textarea>
      </fieldset>
      <input type="submit" value="Update">
    </form>
  </div>
</main>
{% endblock content %}